{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": "off",
    "no-useless-escape": "off",
    "prefer-arrow-callback": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "linebreak-style": ["warn", "windows"]
  }
}
